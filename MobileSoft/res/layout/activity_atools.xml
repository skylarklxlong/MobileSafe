<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:background="#8866ff00"
        android:id="@+id/tv1"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:text="高级工具"
        android:textSize="22sp"
        android:textColor="#000000"/>
    
    <com.skylark.mobilesoft.ui.FocusedTextView 
        android:singleLine="true"
        android:ellipsize="marquee"
        android:text="最新的手机卫士快来下载........下载送大礼包啦.........走过路过不要错过啊........"
        android:textSize="18sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    
    <TextView 
        android:clickable="true"
        android:onClick="numberQuery"
        android:gravity="center_vertical"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="号码归属地查询"/>
    
    <TextView 
        android:clickable="true"
        android:onClick="weatherSearch"
        android:gravity="center_vertical"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="城市天气查询"/>
    <TextView 
        android:clickable="true"
        android:onClick="takePhoto"
        android:gravity="center_vertical"
        android:drawableLeft="@android:drawable/ic_menu_camera"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="测试拍照(ps:目前没想好干吗)"/>
    <TextView 
        android:clickable="true"
        android:onClick="takeVideo"
        android:gravity="center_vertical"
        android:drawableLeft="@android:drawable/ic_menu_camera"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="测试录像(ps:目前没想好干吗)"/>
    
    
    
    
</LinearLayout>
